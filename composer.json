{
  "name": "salibhdr/laravel-validation-rules-builder",
  "description": "A Laravel package to build eloquent validation rules based on http methods",
  "type": "package",
  "license": "MIT",
  "keywords": [
    "salibhdr",
    "laravel",
    "validation",
    "laravel validation",
    "laravel rules",
    "rules",
    "rules builder",
    "laravel validation rules builder",
    "update",
    "create",
    "form request",
    "request",
    "http",
    "http methods"
  ],
  "support": {
    "issues": "https://github.com/SaliBhdr/laravel-validation-rules-builder/issues",
    "source": "https://github.com/SaliBhdr/laravel-validation-rules-builder"
  },
  "authors": [
    {
      "name": "Salar Bahador",
      "email": "bahador.salar@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "SaliBhdr\\ValidationRules\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SaliBhdr\\ValidationRules\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "SaliBhdr\\ValidationRules\\ServiceProvider"
      ],
      "aliases": {
        "RulesBuilder": "SaliBhdr\\ValidationRules\\Facades\\RulesBuilder"
      }
    }
  },
  "require": {
    "php": ">=7.1",
    "laravel/framework": ">=5.0",
    "phplucidframe/console-table": "1.2.*"
  },
  "require-dev": {
    "phpunit/phpunit": ">=7.0.0",
    "orchestra/testbench": ">=3.8",
    "mockery/mockery": ">=1.3",
    "squizlabs/php_codesniffer": "^3.6"
  },
  "scripts": {
    "test-coverage": "vendor/bin/php-coveralls -v",
    "phpcs:test:fix": "phpcbf || true",
    "phpcs:test": "phpcs || true",
    "phpunit:test": "phpunit",
    "test": [
      "@phpcs:test:fix",
      "@phpcs:test",
      "vendor/bin/phpunit --testdox --coverage-text"
    ]
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
