{
  "name": "salibhdr/laravel-validation-rules-builder",
  "description": "A Laravel package to build eloquent validation rules based on http methods",
  "type": "package",
  "license": "MIT",
  "keywords": [
    "salibhdr",
    "laravel",
    "validation",
    "laravel validation",
    "laravel rules",
    "rules",
    "rules builder",
    "laravel validation rules builder",
    "update",
    "create",
    "form request",
    "request",
    "http",
    "http methods"
  ],
  "support": {
    "issues": "https://github.com/SaliBhdr/laravel-validation-rules-builder/issues",
    "source": "https://github.com/SaliBhdr/laravel-validation-rules-builder"
  },
  "authors": [
    {
      "name": "Salar Bahador",
      "email": "bahador.salar@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "SaliBhdr\\ValidationRules\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SaliBhdr\\ValidationRules\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "SaliBhdr\\ValidationRules\\ServiceProvider"
      ],
      "aliases": {
        "RulesBuilder": "SaliBhdr\\ValidationRules\\Facades\\RulesBuilder"
      }
    }
  },
  "require": {
    "php": "^7.2 | ^7.3 | ^7.4 | ^8.0 | ^8.1 | ^8.2",
    "laravel/framework": "^5 | ^6 | ^7 | ^8 | ^9",
    "phplucidframe/console-table": "1.2.*"
  },
  "require-dev": {
    "phpunit/phpunit": "^6 | ^7 | ^8 | ^9",
    "mockery/mockery": "^1",
    "friendsofphp/php-cs-fixer": "^2 | ^3",
    "orchestra/testbench": ">=3.8"
  },
  "scripts": {
    "csfix": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist --allow-risky=yes",
    "test": "XDEBUG_MODE=coverage vendor/bin/phpunit --testdox",
    "testfix": [
      "@csfix",
      "@test"
    ]
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
